{
  "manifest_version": 3,
  "name": "Timma Time Tracking",
  "version": "1.0",
  "description": "Broken Rubik's Timma Extension",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://app.clickup.com/t/*"],
      "css": ["timma-modal.css", "clickup-section.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["timma-modal.css", "clickup-section.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
